<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/nav_home">

    <fragment
        android:id="@+id/nav_home"
        android:name="com.example.myapplication.ui.home.HomeFragment"
        android:label="@string/menu_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/nav_gallery"
        android:name="com.example.myapplication.ui.gallery.GalleryFragment"
        android:label="@string/menu_gallery"
        tools:layout="@layout/fragment_gallery" />

    <fragment
        android:id="@+id/nav_story"
        android:name="com.example.myapplication.ui.story.StoryFragment"
        android:label="@string/menu_story"
        tools:layout="@layout/fragment_story" >

        <action
            android:id="@+id/action_nav_story_to_nav_storyarea"
            app:destination="@id/nav_storyarea" />
    </fragment>
    <fragment
        android:id="@+id/nav_bingo"
        android:name="com.example.myapplication.ui.bingo.BingoFragment"
        android:label="@string/menu_bingo"
        tools:layout="@layout/fragment_bingo" />
    <fragment
        android:id="@+id/nav_hotspot"
        android:name="com.example.myapplication.ui.hotspot.HotspotFragment"
        android:label="fragment_hotspot"
        tools:layout="@layout/fragment_hotspot" />
    <fragment
        android:id="@+id/nav_idea"
        android:name="com.example.myapplication.ui.idea.IdeaFragment"
        android:label="fragment_idea"
        tools:layout="@layout/fragment_idea" />
    <fragment
        android:id="@+id/nav_login"
        android:name="com.example.myapplication.ui.login.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login" />
    <fragment
        android:id="@+id/nav_review"
        android:name="com.example.myapplication.ui.review.ReviewFragment"
        android:label="fragment_review"
        tools:layout="@layout/fragment_review" />
    <fragment
        android:id="@+id/nav_story_start"
        android:name="com.example.myapplication.ui.story.StoryStartFragment"
        android:label="fragment_story_start"
        tools:layout="@layout/fragment_story_start" >
        <action
            android:id="@+id/action_nav_story_start_to_nav_story_end"
            app:destination="@id/nav_story_end" />
    </fragment>
    <fragment
        android:id="@+id/nav_story_end"
        android:name="com.example.myapplication.ui.story.StoryEndFragment"
        android:label="fragment_story_end"
        tools:layout="@layout/fragment_story_end" />
    <fragment
        android:id="@+id/nav_storyarea"
        android:name="com.example.myapplication.ui.story.StoryareaFragment"
        android:label="fragment_storyarea"
        tools:layout="@layout/fragment_storyarea" >
        <action
            android:id="@+id/action_nav_storyarea_to_nav_storoyList"
            app:destination="@id/nav_storyList" />
    </fragment>
    <fragment
        android:id="@+id/nav_storyList"
        android:name="com.example.myapplication.ui.story.StoryListFragment"
        android:label="fragment_storylist"
        tools:layout="@layout/fragment_storylist" >
        <action
            android:id="@+id/action_nav_storyList_to_nav_storyInfo"
            app:destination="@id/nav_storyInfo" />
    </fragment>
    <fragment
        android:id="@+id/nav_storyInfo"
        android:name="com.example.myapplication.ui.story.StoryInfoFragment"
        android:label="StoryInfoFragment" >
        <action
            android:id="@+id/action_nav_storyInfo_to_nav_story_start"
            app:destination="@id/nav_story_start" />
    </fragment>


</navigation>