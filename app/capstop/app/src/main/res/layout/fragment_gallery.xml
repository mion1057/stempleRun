<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.gallery.GalleryFragment">

    <Button
        android:id="@+id/latest_but"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="최신순"
        app:layout_constraintEnd_toStartOf="@+id/add_photo"
        app:layout_constraintStart_toEndOf="@+id/popular_but"
        app:layout_constraintTop_toTopOf="@+id/popular_but" />

    <Button
        android:id="@+id/popular_but"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="인기순"
        app:layout_constraintEnd_toStartOf="@+id/latest_but"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/add_photo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:text="쓰기"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/latest_but"
        app:layout_constraintTop_toTopOf="@+id/popular_but" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/galleryList"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@+id/latest_but"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>